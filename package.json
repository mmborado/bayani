{
  "name": "my-eleventy-site",
  "version": "1.0.0",
  "scripts": {
    "build": "eleventy",
    "start": "eleventy --serve",
    "watch:css": "npx tailwindcss -i src/styles/tailwind.css -o src/styles/style.css --watch",
    "serve": "eleventy --serve --watch --incremental",
    "dev": "npm run watch:css & npm run serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "luxon": "^3.6.1"
  }
}
