---
layout: layouts/base.njk
eleventyComputed:
  title: "{{ gallery.meta.title }}"
  description: "{{ gallery.meta.description}}" 
slug: gallery
---

<!-- Page Header -->
{% from "components/pageHeader.njk" import pageHeader %}
{{ pageHeader(gallery.pageHeader) }}

<!-- Gallery Section -->
<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for item in gallery.gallery.items %}
        <div class="relative overflow-hidden rounded-lg shadow-lg h-72 group">
          <img src="{{ item.src | url }}" alt="{{ item.alt }}" class="w-full h-full object-cover transform transition-transform group-hover:scale-105" loading="lazy">
          <div class="absolute inset-0 bg-black bg-opacity-60 flex flex-col justify-end p-4 translate-y-full transition-transform group-hover:translate-y-0">
            <h3 class="text-white text-xl font-semibold">{{ item.title }}</h3>
            <p class="text-gray-200 mt-1 text-sm">{{ item.desc }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Pagination -->
    {# <div class="flex justify-center mt-12 space-x-3">
      {% set max = ((gallery.gallery.items | length) / 6) | round(0, "ceil") %}
      {% for i in range(0, max) %}
        <a href="#" class="w-10 h-10 flex items-center justify-center rounded {% if loop.first %}bg-yellow-400 text-black{% else %}bg-gray-200 text-gray-800 hover:bg-yellow-400 hover:text-black{% endif %}">{{ i + 1 }}</a>
      {% endfor %}
    </div> #}
  </div>
</section>

<!-- Call to Action -->
{% from "components/cta.njk" import cta %}
{{  cta(gallery.cta) }}
