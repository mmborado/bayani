---
layout: layouts/base.njk
title: Services
slug: services
eleventyComputed:
  title: "{{ services.meta.title }}"
  description: "{{ services.meta.description}}" 
---

<!-- Page Header -->
{% from "components/pageheader.njk" import pageHeader %}
{{ pageHeader(services.pageHeader) }}

<!-- Services Content -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-5 space-y-12">
    {% for service in services.services %}
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
      <div class="overflow-hidden rounded-lg shadow-lg">
        <img
          src="{{ service.image }}"
          alt="{{ service.title }}"
          class="w-full h-64 object-cover"
          loading="lazy"
        />
      </div>
      <div class="space-y-4">
        <h2 class="text-2xl font-semibold">{{ service.title }}</h2>
        <p class="text-gray-700">{{ service.description }}</p>
        {% if service.features %}
        <ul class="list-disc list-inside space-y-2 text-gray-600">
          {% for feat in service.features %}
          <li>{{ feat }}</li>
          {% endfor %}
        </ul>
        {% endif %}
        <a
          href="{{service.href}}"
          class="inline-block bg-yellow-400 text-black px-5 py-3 font-bold rounded hover:bg-yellow-500 transition duration-300"
        >
          Request {{ service.title }}
        </a>
      </div>
    </div>
    {% endfor %}
  </div>
</section>

<!-- General Service CTA -->
{% from "components/cta.njk" import cta %}
{{  cta(services.cta) }}
