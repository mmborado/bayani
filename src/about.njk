---
layout: layouts/base.njk
eleventyComputed:
  title: "{{ about.meta.title }}"
  description: "{{ about.meta.description}}" 
slug: about
---

<!-- Page Header -->
{% from "components/pageheader.njk" import pageHeader %}
{{ pageHeader(about.pageHeader) }}

<!-- About Story -->
<section id="about" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div class="overflow-hidden rounded shadow-lg">
        <img src="{{ about.about.image.src }}" alt="{{ about.about.image.alt }}" class="w-full h-full object-cover">
      </div>
      <div class="space-y-6">
        <h3 class="text-2xl font-semibold">{{ about.about.heading }}</h3>
        {% for para in about.about.paragraphs %}
          <p class="text-gray-700">{{ para }}</p>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<!-- Values -->
<section id="values" class="py-20 bg-gray-100">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold inline-block border-b-4 border-yellow-400 pb-2 mb-4">{{ about.values.sectionTitle }}</h2>
      <p class="text-gray-600">{{ about.values.sectionSubtitle }}</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for item in about.values.items %}
        <div class="bg-white p-8 rounded-lg shadow hover:shadow-lg transition">
          <div class="w-16 h-16 bg-yellow-400 rounded-full flex items-center justify-center mx-auto text-black text-2xl font-bold mb-4">{{ item.icon }}</div>
          <h3 class="text-xl font-semibold mb-2 text-center">{{ item.title }}</h3>
          <p class="text-gray-700">{{ item.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Call To Action -->
{% from "components/cta.njk" import cta %}
{{  cta(about.cta) }}
