{% macro cta(data) %}
<section class="relative py-16 bg-center bg-cover" style="background-image:url('{{ data.backgroundImage }}')">
  <div class="absolute inset-0 bg-black bg-opacity-80"></div>
  <div class="relative z-10 max-w-3xl mx-auto px-5 text-center text-white">
    <h2 class="text-3xl md:text-4xl font-bold mb-6">{{ data.heading }}</h2>
    <p class="text-lg md:text-xl mb-8">
      {{ data.text }}
    </p>
    <a href="{{ data.button.url }}"
       class="inline-block bg-blue-700 px-6 py-3 rounded-lg shadow hover:bg-blue-800 transition">
      {{ data.button.label }}
    </a>
  </div>
</section>
{% endmacro %}