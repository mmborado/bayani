<header class="bg-black text-white">
  <div class="max-w-[1200px] mx-auto px-5">
    <!-- Top Bar -->
    <div class="flex flex-col md:flex-row justify-between items-center py-4">
      <a href="/" class="flex items-center space-x-3">
        <img src="/images/logo.png" alt="{{ site.title }} Logo" class="h-[100px] mr-2">
        <span class="text-2xl md:text-3xl font-bold uppercase">Construction Co.</span>
      </a>
      <div class="flex flex-col md:items-end mt-4 md:mt-0">
        <span class="text-yellow-400 text-xl font-bold block mb-1">
          CALL NOW: 555-123-4567
        </span>
        <a href="#contact"
           class="inline-block bg-yellow-400 text-black px-5 py-2 font-bold rounded hover:bg-yellow-500 transition duration-300 transform hover:-translate-y-1">
          Get a Free Quote
        </a>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="bg-black mt-3">
      <ul class="flex flex-wrap justify-between py-2">
        {% for item in navigation %}
        <li>
          <a 
            href="{{ item.url }}" 
            class="text-white font-semibold px-3 py-2 block hover:bg-yellow-400 hover:text-black transition"
          >
            {{ item.name }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
  </div>
</header>
