<header class="relative bg-black text-white">
  <div class="container mx-auto px-5">
    <div class="grid grid-areas-header grid-col-2 py-4 md:py-2">
      <div class="area-logo flex items-center space-x-3">
      <a href="/" >
        <img src="{{ '/images/logo.png' | url }}" alt="{{ site.title }} Logo" class="max-h-[80px] md:max-h-[130px] mr-2">
      </a>
      </div>


      <div class="area-cta flex md:flex-col items-center justify-between md:justify-center md:items-end pt-4 md:pt-0 border-t border-white md:border-none">
        <span class="text-yellow-400 text-md md:text-xl font-bold md:mb-1">
          CALL NOW: 714-855-8929
        </span>
        <a href="/contact"
           class="bg-yellow-400 text-black px-5 py-2 font-bold rounded hover:bg-yellow-500 transition duration-300 transform hover:-translate-y-1">
          Get a Free Quote
        </a>
      </div>

    <div class="area-menu md:hidden flex items-center justify-end">
      <button
        id="menu-btn"
        type="button"
        aria-label="Open navigation menu"
        aria-expanded="false"
        aria-controls="mobile-menu"
        class="flex items-center justify-center p-2 border border-white rounded text-white hover:bg-gray-800 transition"
      >
        <span class="sr-only">Open navigation menu</span>

        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <nav class="area-nav hidden md:block">
      <ul class="flex flex-row justify-end py-2">
        {% for item in navigation %}
        {% set isActive = (item.slug == slug) %}
        
        <li>
          <a 
            href="{{ item.url }}" 
            class="text-white font-semibold px-3 py-2 block hover:bg-yellow-400 hover:text-black transition
            {% if isActive %}
              text-yellow-400 border-b-2 border-yellow-400
            {% else %}
              text-gray-800 hover:text-gray-600
            {% endif %}
            "
          >
            {{ item.name }}
          </a>
        </li>
        {% endfor %}
      </ul>
    </nav>
    </div>
  </div>

  <nav
    id="mobile-menu"
    class="absolute top-full left-0 w-full bg-black origin-top transform scale-y-0 transition-transform duration-300 ease-in-out z-50 md:hidden"
  >
    <ul class="flex flex-col border-t-2">
      {% for item in navigation %}
      {% set isActive = (item.slug == slug) %}
      <li>
        <a href="{{ item.url }}"
           class="text-white font-semibold px-3 py-2 block hover:bg-yellow-400 hover:text-black transition
            {% if isActive %}
              text-yellow-400 border-b-2 border-yellow-400
            {% else %}
              text-gray-800 hover:text-gray-600 border-b-2
            {% endif %}
           ">
          {{ item.name }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </nav>


</header>
