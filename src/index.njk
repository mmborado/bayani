---
layout: layouts/base.njk
title: Home
slug: ''
eleventyComputed:
  title: "{{ homepage.meta.title }}"
  description: "{{ homepage.meta.description}}" 
---
{% set data = homepage %}

<!-- Hero Section -->
<section class="relative h-[500px] bg-center bg-cover" style="background-image:url('{{ data.hero.backgroundImage | url}}')">
  <div class="absolute inset-0 bg-black bg-opacity-70"></div>
  <div class="relative z-10 max-w-4xl mx-auto px-5 text-center flex flex-col items-center justify-center h-full">
    <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg text-white">
      {{ data.hero.heading }}
    </h1>
    <p class="text-lg md:text-xl mb-8 drop-shadow text-gray-100">
      {{ data.hero.subheading }}
    </p>
    <a href="{{ data.hero.ctaUrl | url}}"
       class="bg-yellow-400 text-black px-5 py-3 font-bold rounded hover:bg-yellow-500 transition duration-300">
      {{ data.hero.ctaText }}
    </a>
  </div>
</section>

<!-- Services Section -->
<section id="services" class="py-16 bg-white">
  <div class="container mx-auto px-5">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-4 inline-block border-b-4 border-yellow-400">
        {{ data.services.title }}
      </h2>
      <p class="text-gray-600">
        {{ data.services.description }}
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 md: grid-col-3 lg:grid-cols-5 gap-8">
      {% for service in data.services.list %}
      <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:-translate-y-1 transition">
        <div class="h-48 overflow-hidden">
          <img src="{{ service.image | url }}" alt="{{ service.title }}" class="w-full h-full object-cover" loading="lazy">
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">{{ service.title }}</h3>
          <p class="text-gray-700">{{ service.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Why Choose Us Section -->
<section id="about" class="py-16 bg-gray-100">
  <div class="container mx-auto px-5">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-4 inline-block border-b-4 border-yellow-400">
        {{ data.features.title }}
      </h2>
      <p class="text-gray-600"> {{ data.features.description }}</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for feature in data.features.list %}
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0 bg-black text-yellow-400 w-12 h-12 flex items-center justify-center rounded-full text-xl">
          {{ feature.icon }}
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2">{{ feature.title }}</h3>
          <p class="text-gray-700">{{ feature.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Gallery Section -->
<section id="gallery" class="py-16 bg-white">
  <div class="container mx-auto px-5">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-4 inline-block border-b-4 border-yellow-400">
        {{ data.gallery.title }}
      </h2>
      <p class="text-gray-600">
       {{ data.gallery.description }}
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6 ">
      {% for image in data.gallery.images %}
      <div class="overflow-hidden rounded-lg shadow-lg max-h-72">
        <img src="{{ image.src | url}}" alt="{{ image.alt }}" class="w-full h-full object-cover hover:scale-105 transition-transform" loading="lazy">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Call to Action Section -->
{% from "components/cta.njk" import cta %}
{{  cta(data.cta) }}