---
layout: layouts/base.njk
title: Home
---
{% set data = homepage %}

<!-- Hero Section -->
<section class="relative h-[500px] bg-[url('https://placehold.co/api/placeholder/1200/500')] bg-center bg-cover">
  <div class="absolute inset-0 bg-black bg-opacity-70"></div>
  <div class="relative z-10 max-w-[800px] mx-auto px-5 text-center flex flex-col items-center justify-center h-full">
    <h1 class="text-4xl md:text-5xl font-bold mb-6 drop-shadow-lg text-white">
      Professional Concrete Cutting &amp; Core Drilling Services
    </h1>
    <p class="text-lg md:text-xl mb-8 drop-shadow text-gray-100">
      With over 20 years of experience, we deliver the highest quality
      concrete cutting services for residential and commercial projects.
    </p>
    <a href="#contact"
       class="inline-block bg-blue-700 text-white px-6 py-3 rounded-lg shadow hover:bg-blue-800 transition">
      Request A Quote Today
    </a>
  </div>
</section>

<!-- Services Section -->
<section id="services" class="py-16 bg-white">
  <div class="max-w-[1200px] mx-auto px-5">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-4 inline-block border-b-4 border-yellow-400">
        Our Services
      </h2>
      <p class="text-gray-600">
        We provide a full range of concrete cutting, coring, and removal services
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for service in data.services %}
      <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:-translate-y-1 transition">
        <div class="h-48 overflow-hidden">
          <img src="{{ service.image }}" alt="{{ service.title }}" class="w-full h-full object-cover">
        </div>
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">{{ service.title }}</h3>
          <p class="text-gray-700">{{ service.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Why Choose Us Section -->
<section id="about" class="py-16 bg-gray-100">
  <div class="max-w-[1200px] mx-auto px-5">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-4 inline-block border-b-4 border-yellow-400">
        Why Choose Us
      </h2>
      <p class="text-gray-600">What sets us apart from the competition</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for feature in data.features %}
      <div class="flex items-start space-x-4">
        <div class="flex-shrink-0 bg-black text-yellow-400 w-12 h-12 flex items-center justify-center rounded-full text-xl">
          {{ feature.icon }}
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2">{{ feature.title }}</h3>
          <p class="text-gray-700">{{ feature.description }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Gallery Section -->
<section id="gallery" class="py-16 bg-white">
  <div class="max-w-[1200px] mx-auto px-5">
    <div class="text-center mb-10">
      <h2 class="text-3xl font-bold mb-4 inline-block border-b-4 border-yellow-400">
        Our Work
      </h2>
      <p class="text-gray-600">
        See samples of our concrete cutting and core drilling projects
      </p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
      {% for image in data.gallery %}
      <div class="overflow-hidden rounded-lg shadow-lg">
        <img src="{{ image.src }}" alt="{{ image.alt }}" class="w-full h-full object-cover hover:scale-105 transition-transform">
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="relative py-16 bg-[url('https://placehold.co/api/placeholder/1200/400')] bg-center bg-cover">
  <div class="absolute inset-0 bg-black bg-opacity-80"></div>
  <div class="relative z-10 max-w-[800px] mx-auto px-5 text-center text-white">
    <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Start Your Project?</h2>
    <p class="text-lg md:text-xl mb-8">
      Contact us today for a free consultation and quote. Our team is
      ready to provide the professional concrete cutting services you need.
    </p>
    <a href="#contact"
       class="inline-block bg-blue-700 px-6 py-3 rounded-lg shadow hover:bg-blue-800 transition">
      Get Your Free Quote
    </a>
  </div>
</section>
